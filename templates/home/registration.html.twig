{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

    <div id="flash-messages">
        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <main id="main">
        {{ form_start(registration) }}
        {{ form_row(registration._token) }}
        {{ form_label(registration.email) }}
        {{ form_errors(registration.email) }}
        {{ form_widget(registration.email, {'attr':{'value': email }}) }}
        {{ form_help (registration.email) }}
        {{ form_row(registration.newPassword) }}
        {{ form_row(registration.associate) }}
        {{ form_end(registration, {'render_rest': false}) }}
    </main>

{% endblock %}
