{% extends 'base.html.twig' %}

{% block title %}Associate information{% endblock %}

{% block body %}
    <div style="background-color: #fff; width: 100%; height: 100%">
        <div class="sidebarProfile__pictureContainer">
            {% if associate.profilePicture is not null %}
                <img class="sidebar-picture" src="{{ associate.profilePicture|downloadUrlParser }}" />
            {% else%}
                <img class="sidebar-picture" src="{{ asset('assets/images/profile.jpg') }}" />
            {% endif %}
        </div>
        <p>Full Name: {{ associate.fullName }}</p>
        <p>Email: {{ associate.email }}</p>
        <p>Mobile Phone: {{ associate.mobilePhone }}</p>
        <p>Join Date: {{ associate.joinDate|date('d-m-Y') }}</p>
    </div>
    <style>
        html {
            height: 100%;
            width: 100%;
        }

        body {
            height: 100%;
            width: 100%;
        }
    </style>
{% endblock %}