{% extends 'base.html.twig' %}

{% block title %}Associate information{% endblock %}

{% block body %}
    <div style="background-color: #fff; width: 100%; height: 100%; display: flex; justify-content: space-around">
        {% if isCompany is not defined or (isCompany is defined and isCompany != true) %}
        <div class="sidebarProfile__pictureContainer">
            {% if associate.profilePicture is not null %}
                <img class="sidebar-picture" src="{{ associate.profilePicture|downloadUrlParser }}" />
            {% else%}
                <img class="sidebar-picture" src="{{ asset('assets/images/profile.jpg') }}" />
            {% endif %}
        </div>
        <div>
            <p><b>Full Name</b>: {{ associate.fullName }}</p>
            <p><b>Email</b>: {{ associate.email }}</p>
            <p><b>Mobile Phone</b>:
                {% if associate.mobilePhone == '' %}
                    -
                {% else %}
                    {{ associate.mobilePhone }}
                {% endif %}
            </p>
            <p><b>Join Date</b>: {{ associate.joinDate|date('d-m-Y') }}</p>
        </div>
        {% else %}
            <div class="sidebarProfile__pictureContainer">
                <img class="sidebar-picture" src="{{ asset('assets/images/profile.jpg') }}" />
            </div>
            <div>
                <p><b>Title</b>: Company</p>
            </div>
        {% endif %}
    </div>
    <style>
        html {
            height: 100%;
            width: 100%;
        }

        body {
            height: 100%;
            width: 100%;
        }
    </style>
{% endblock %}